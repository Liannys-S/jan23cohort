@{
    ViewData["Title"] = "Home Page";
}
@model User
<div class="row justify-content-center">
    <div class="col-lg-6 col-sm-12">
        <div class="card mt-5">
            <div class="card-body">
                <h1 class="mb-3">Enter your information</h1>
                <form asp-action="Validate" asp-controller="Home" method="POST">
                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <label asp-for="FirstName" class="form-label">First Name:</label>
                        <div class=" col-sm-9">
                            <input asp-for="FirstName" type="text" class="form-control">
                        </div>
                    </div>
                    <span asp-validation-for="FirstName" class="form-text text-danger"></span>
                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <label asp-for="LastName" class="form-label">Last Name:</label>
                        <div class=" col-sm-9">
                            <input asp-for="LastName" type="text" class="form-control">
                        </div>
                    </div>
                    <span asp-validation-for="LastName" class="form-text text-danger"></span>
                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <label asp-for="Age" class="form-label">Age:</label>
                        <div class=" col-sm-9">
                            <input asp-for="Age" type="number" class="form-control">
                        </div>
                    </div>
                    <span asp-validation-for="Age" class="form-text text-danger"></span>
                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <label asp-for="Email" class="form-label">Email Address:</label>
                        <div class=" col-sm-9">
                            <input asp-for="Email" type="email" class="form-control">
                        </div>
                    </div>
                    <span asp-validation-for="Email" class="form-text text-danger"></span>
                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <label asp-for="Password" class="form-label">Password:</label>
                        <div class=" col-sm-9">
                            <input asp-for="Password" type="password" class="form-control">
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="form-text text-danger"></span>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary mt-3">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
