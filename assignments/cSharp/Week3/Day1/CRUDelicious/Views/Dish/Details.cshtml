@{
    ViewData["Title"] = "Details";
}
@model Dish

@section Title{ <div class="text-center mt-5">
        <h1 class="display-4">@Model.Name</h1>
    </div>
}

<div class="container text-start mt-5">
    <h2 class=" col-6 border-bottom">
        @Model.Name by @Model.Chef
    </h2>
    <p class="fs-3 mt-3">@Model.Description</p>
    <p class="fs-3 mt-3">Tastiness: @Model.Tastiness</p>
    <p class="fs-3 mt-3">Calories: @Model.Calories</p>
    <div class="row text-center mt-5">
        <div class="col-4">
            <form asp-controller="Dish" asp-action="Delete" asp-route-dishId= "@Model.DishId" method="POST">
                <button class="btn btn-md btn-danger">Delete</button>
            </form>
        </div>
        <div class="col-4">
            <a asp-controller="Dish" asp-action="Edit" asp-route-dishId= "@Model.DishId">
                <button class="btn btn-md btn-primary">Edit</button>
            </a>
        </div>
    </div>
</div>      
