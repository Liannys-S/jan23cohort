@model Dish

@{
    ViewData["Title"] = "Edit Page";
}

@section Title{ 
    <div class="text-center mt-5">
        <h1 class="display-4">Edit dish</h1>
    </div>
}


<div class="container text-center mt-5">
    <form asp-action="Update" asp-controller="Dish" method="POST" asp-route-dishId = "@Model.DishId">
        <div class="row text-start">
            <div class="col">    
                    <div class="mb-3">
                        <label asp-for="Chef" class="form-label">Chefs Name</label>
                        <input asp-for="Chef" class="form-control" type="text" value="@Model.Chef">
                        <span asp-validation-for="Chef" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Name of Dish</label>
                        <input asp-for="Name" class="form-control" type="text" value="@Model.Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Calories" class="form-label"># of Calories</label>
                        <input asp-for="Calories" class="form-control" type="number" value="@Model.Calories">
                        <span asp-validation-for="Calories" class="text-danger"></span>
                    </div>
            </div>
            <div class="col">
                    <label asp-for="Tastiness" class="form-label">Tastiness</label>
                    <select asp-for="Tastiness" class="form-select" value="@Model.Tastiness">
                        <option selected>Choose...</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    <span asp-validation-for="Tastiness" class="text-danger"></span>
            </div>
            <div class="col">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="6" value="@Model.Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <div class="mt-3 text-end"><button class="btn btn-primary">Update</button></div>
            </div>
        </div>
    </form>
</div>